rooms:
  - id: pete
    name: "Pete's Room"
    delta_t50: 1900  # Watts - Type 22 panel radiator ~600x1100mm
    precision: 1
    smoothing:
      enabled: true
      alpha: 0.3      # 30% new, 70% history (good for 2+ sensors)
    load_sharing:
      schedule_lookahead_m: 30  # Conservative pre-warming (bedroom)
      # No fallback_priority = excluded from Tier 3 (bedroom privacy)
    sensors:
      - entity_id: sensor.pete_xiaomi_temperature
        role: primary
        timeout_m: 180
      - entity_id: sensor.pete_snzb02_temperature
        role: primary
        timeout_m: 180
    trv:
      entity_id: climate.trv_pete
    hysteresis:
      on_delta_c: 0.50
      off_delta_c: 0.10
    valve_bands:
      band_1_error: 0.30
      band_2_error: 0.80
      band_1_percent: 100.0
      band_2_percent: 100.0
      band_max_percent: 100.0
      step_hysteresis_c: 0.05
    valve_update:
      min_interval_s: 30
  - id: games
    name: "Dining Room"
    delta_t50: 2500  # Watts - Type 22 panel radiator ~600x1420mm
    precision: 1
    smoothing:
      enabled: true
      alpha: 0.3      # 30% new, 70% history (good for 2+ sensors)
    load_sharing:
      schedule_lookahead_m: 60  # Default window
      fallback_priority: 2       # Good fallback choice (high capacity, central location)
    sensors:
      - entity_id: sensor.games_xiaomi_temperature
        role: primary
        timeout_m: 180
      - entity_id: sensor.games_shtc3_temperature
        role: primary
        timeout_m: 180
      - entity_id: sensor.games_snzb02_temperature
        role: primary
        timeout_m: 150
    trv:
      entity_id: climate.trv_games
    valve_bands:
      band_1_error: 0.30
      band_2_error: 0.80
      band_1_percent: 100.0
      band_2_percent: 100.0
      band_max_percent: 100.0
      step_hysteresis_c: 0.05
  - id: lounge
    name: "Living Room"
    delta_t50: 2290  # Watts - Vertical radiator 1780x590mm (exact from catalogue)
    radiator_exponent: 1.25  # Oval tube radiator (between panels 1.3 and towel rails 1.2)
    precision: 1
    smoothing:
      enabled: true
      alpha: 0.3      # 30% new, 70% history (good for 2+ sensors)
    load_sharing:
      schedule_lookahead_m: 90  # Aggressive pre-warming (main living space)
      fallback_priority: 1       # First choice for fallback (high capacity, frequently used)
    sensors:
      - entity_id: sensor.lounge_xiaomi_temperature
        role: primary
        timeout_m: 180
      - entity_id: sensor.awair_omni_270_temperature
        role: primary
        timeout_m: 180
    trv:
      entity_id: climate.trv_lounge
    valve_bands:
      band_1_error: 0.30
      band_2_error: 0.80
      band_1_percent: 100.0
      band_2_percent: 100.0
      band_max_percent: 100.0
      step_hysteresis_c: 0.05
  - id: abby
    name: "Abby's Room"
    delta_t50: 2800  # Watts - Type 22 panel radiator ~600x1520mm
    precision: 1
    smoothing:
      enabled: true
